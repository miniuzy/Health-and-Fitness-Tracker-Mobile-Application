<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_sentiment_very_dissatisfied_black_24dp"
            android:id="@+id/veryunhappy"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_sentiment_dissatisfied_black_24dp"
            android:id="@+id/unhappy"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_sentiment_neutral_black_24dp"
            android:id="@+id/neutralfeeling"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_sentiment_satisfied_black_24dp"
            android:id="@+id/happy"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_sentiment_very_satisfied_black_24dp"
            android:id="@+id/veryhappy"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>